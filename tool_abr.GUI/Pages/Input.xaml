<UserControl x:Class="Funique.GUI.Pages.Input"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Funique.GUI.Pages"
             xmlns:core="clr-namespace:Funique;assembly=Funique.Core"
             xmlns:gui="clr-namespace:Funique.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <Grid Name="MasterM3U8Input" Grid.Row="1" Grid.RowSpan="10" Grid.Column="1" Margin="8" ScrollViewer.VerticalScrollBarVisibility="Visible">
        <Grid.DataContext>
            <core:M3U8Setting />
        </Grid.DataContext>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="80" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="23" />
            <RowDefinition Height="23" />
            <RowDefinition Height="23" />
            <RowDefinition Height="23" />
            <RowDefinition Height="23" />
            <RowDefinition Height="23" />
            <RowDefinition Height="23" />
            <RowDefinition Height="23" />
            <RowDefinition Height="23" />
            <RowDefinition Height="23" />
            <RowDefinition Height="23" />
            <RowDefinition Height="23" />
            <RowDefinition Height="23" />
        </Grid.RowDefinitions>

        <Label Content="Sync" Grid.Column="0" Grid.Row="0" />
        <Label Content="Stream Loop" Grid.Column="0" Grid.Row="1" />
        <Label Content="Use Wall Clock" Grid.Column="0" Grid.Row="2" />
        <Label Content="Cache" Grid.Column="0" Grid.Row="3" />
        <Label Content="Input Framerate" Grid.Column="0" Grid.Row="4" />
        <Label Content="Output Framerate" Grid.Column="0" Grid.Row="5" />
        <Label Content="Start Number" Grid.Column="0" Grid.Row="6" />
        <Label Content="Total Frame" Grid.Column="0" Grid.Row="7" />
        <Label Content="Main Input" Grid.Column="0" Grid.Row="8" />
        <Label Content="Audio Input" Grid.Column="0" Grid.Row="9" />
        <Label Content="Subtitle Input" Grid.Column="0" Grid.Row="10" />
        <Label Content="Have Audio" Grid.Column="0" Grid.Row="11" />
        <Label Content="HWAccel" Grid.Column="0" Grid.Row="12" />

        <CheckBox PreviewTextInput="TextBox_IntOnly" IsChecked="{Binding Sync}" Grid.Column="1" Grid.Row="0" />
        <TextBox PreviewTextInput="TextBox_IntOnly" Text="{Binding StreamingLoop}" Grid.Column="1" Grid.Row="1" />
        <CheckBox PreviewTextInput="TextBox_IntOnly" IsChecked="{Binding Wall_Clock}" Grid.Column="1" Grid.Row="2" />
        <CheckBox PreviewTextInput="TextBox_IntOnly" IsChecked="{Binding Cache}" Grid.Column="1" Grid.Row="3" />
        <TextBox Text="{Binding InputFramerate}" Grid.Column="1" Grid.Row="4" />
        <TextBox Text="{Binding OutputFramerate}" Grid.Column="1" Grid.Row="5" />
        <TextBox Text="{Binding StartNumber}" Grid.Column="1" Grid.Row="6" />
        <TextBox Text="{Binding VFrame}" Grid.Column="1" Grid.Row="7" />
        <TextBox Text="{Binding Input}" Grid.Column="1" Grid.Row="8" />
        <TextBox Text="{Binding InputAudio}" Grid.Column="1" Grid.Row="9" />
        <TextBox Text="{Binding InputSubtitle}" Grid.Column="1" Grid.Row="10" />
        <CheckBox IsChecked="{Binding HaveAudio}" Grid.Column="1" Grid.Row="11" />
        <ComboBox Grid.Column="1" Grid.Row="12" ItemsSource="{Binding HWAccelTypeDict}" DisplayMemberPath="Value" SelectedValuePath="Key" SelectedValue="{Binding HWAccelType}" />
    </Grid>
</UserControl>
